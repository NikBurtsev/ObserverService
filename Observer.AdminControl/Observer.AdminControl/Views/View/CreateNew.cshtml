@model Observer.Data.ObservationObject

@{
    ViewData["Title"] = "CreateNew";
}

<h1>CreateNew</h1>

<h4>ObservationObject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNew">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" readonly="True" />
            <div class="form-group">
                <label asp-for="FqdnName" class="control-label"></label>
                <input asp-for="FqdnName" class="form-control" />
                <span asp-validation-for="FqdnName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgrammType" class="control-label"></label>
                <input asp-for="ProgrammType" class="form-control" />
                <span asp-validation-for="ProgrammType" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Message" readonly="True" />
            <div>
                <label>@Html.RadioButtonFor(m => m.IsActive, true)IsActive</label>
                <label>@Html.RadioButtonFor(m => m.IsActive, false)!IsActive</label>
            </div>
            <input type="hidden" asp-for="LastNotifySend" readonly="True" />
            <input type="hidden" asp-for="ActiveStatus" readonly="True" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
